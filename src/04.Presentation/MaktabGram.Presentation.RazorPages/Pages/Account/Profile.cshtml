@page
@model MaktabGram.Presentation.RazorPages.Pages.Account.ProfileModel
@{
    ViewData["Title"] = $"{Model.Profile.UserName} | مکتب‌گرام";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<main class="max-w-4xl mx-auto px-4 pt-6 pb-20 md:pb-8">
    <!-- هدر پروفایل -->
    <section class="bg-white rounded-2xl shadow-xl p-6 mb-6">
        <div class="flex flex-col md:flex-row items-center md:items-start gap-8">
            <!-- آواتار با گرادینت -->
            <div class="profile-avatar-container">
                <div class="w-28 h-28 md:w-36 md:h-36 rounded-full overflow-hidden border-4 border-white shadow-lg">
                    @if (!string.IsNullOrEmpty(Model.Profile.ImgProfileUrl))
                    {
                        <img src="/@Model.Profile.ImgProfileUrl" alt="@Model.Profile.UserName" class="w-full h-full object-cover">
                    }
                    else
                    {
                        <div class="w-full h-full bg-gradient-to-br from-indigo-500 to-purple-600 flex items-center justify-center">
                            <span class="text-white text-5xl font-bold">@Model.Profile.UserName.Substring(0, 1).ToUpper()</span>
                        </div>
                    }
                </div>
            </div>

                  <!-- اطلاعات و آمار -->
            <div class="flex-1 text-center md:text-right">
                <h1 class="text-2xl font-bold mb-4">@Model.Profile.UserName</h1>

                <div class="flex justify-center md:justify-start gap-10 mb-6 text-center">
                    <div>
                        <p class="text-2xl font-bold">
                            @if (@Model.Profile.Posts is not null)
                            {
                                @Model.Profile.Posts.Count
                            }
                            else
                            {
                                @(0)
                            }
                        </p>
                        <p class="text-sm text-gray-600">پست</p>
                    </div>
                    <div>
                        <p class="text-2xl font-bold">@Model.Profile.FollowerCount</p>
                        <p class="text-sm text-gray-600">دنبال‌کننده</p>
                    </div>
                    <div>
                        <p class="text-2xl font-bold">@Model.Profile.FollowingCount</p>
                        <p class="text-sm text-gray-600">دنبال‌شونده</p>
                    </div>
                </div>

                <!-- بایو -->
                <div class="mb-6 text-sm leading-relaxed">
                    <p class="font-medium">@Model.Profile.UserName</p>
                    <p class="text-gray-700 mt-1">@Model.Profile.Bio</p>
                </div>

                <!-- دکمه‌های اکشن -->
                <div class="flex gap-3 justify-center md:justify-start">
                    <a href="/Messages/@Model.Profile.UserName" class="px-8 py-2.5 bg-gray-200 text-gray-800 rounded-lg font-semibold text-sm hover:bg-gray-300 transition">
                        پیام
                    </a>

                    @if (!Model.Profile.IsFollower)
                    {
                        <a asp-page-handler="Follow" asp-route-id="@Model.Profile.Id" class="btn btn-success">
                            دنبال کردن
                        </a>
                    }
                    else
                    {
                        <a asp-page-handler="UnFollow" asp-route-id="@Model.Profile.Id" class="btn btn-danger">
                            دنبال نکردن
                        </a>
                    }


                    <button class="p-2.5 bg-gray-200 rounded-lg hover:bg-gray-300 transition">
                        <i data-lucide="settings" class="w-5 h-5 text-gray-700"></i>
                    </button>
                </div>
            </div>
        </div>
    </section>

    <!-- تب‌ها -->
    <div class="border-b border-gray-300 sticky top-14 bg-white z-10">
        <div class="flex justify-around text-center">
            <button onclick="openTab('posts')" id="tab-posts"
                    class="tab-btn flex-1 py-4 border-b-2 border-indigo-600 text-indigo-600 font-medium flex items-center justify-center gap-2 active">
                <i data-lucide="grid-3x3" class="w-5 h-5"></i>
                <span class="hidden sm:inline">پست‌ها</span>
            </button>
            <button onclick="openTab('saved')" id="tab-saved"
                    class="tab-btn flex-1 py-4 text-gray-500 hover:text-gray-800 transition flex items-center justify-center gap-2">
                <i data-lucide="bookmark" class="w-5 h-5"></i>
                <span class="hidden sm:inline">ذخیره‌شده</span>
            </button>
            <button onclick="openTab('tagged')" id="tab-tagged"
                    class="tab-btn flex-1 py-4 text-gray-500 hover:text-gray-800 transition flex items-center justify-center gap-2">
                <i data-lucide="tag" class="w-5 h-5"></i>
                <span class="hidden sm:inline">تگ‌شده</span>
            </button>
        </div>
    </div>

    @if (Model.Profile.IsFollower)
    {
        <!-- محتوای تب‌ها -->
        <div class="mt-6">
            <!-- تب پست‌ها -->
            <div id="posts" class="tab-content">
                @if (Model.Profile.Posts is not null)
                {
                    <div class="grid grid-cols-3 gap-1 md:gap-4">
                        @foreach (var post in Model.Profile.Posts)
                        {
                            <a asp-page="/Posts/Details" asp-route-id="@post.PostId" class="aspect-square relative group overflow-hidden rounded-lg">

                                    <img src="/@post.ImgPostUrl" alt="پست" class="w-full h-full object-cover transition-transform group-hover:scale-110 duration-300">
                                
                                <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition flex items-center justify-center">
                                    <div class Uly-white flex gap-6 text-lg font-bold">
                                        <span class="flex items-center gap-2">
                                            <i data-lucide="heart" class="w-6 h-6 fill-white"></i> @post.LikeCount
                                        </span>
                                        <span class="flex items-center gap-2">
                                            <i data-lucide="message-circle" class="w-6 h-6 fill-white"></i> @post.CommentCount
                                        </span>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-20">
                        <i data-lucide="camera-off" class="w-20 h-20 text-gray-300 mx-auto mb-4"></i>
                        <p class="text-xl font-medium text-gray-600">هنوز پستی منتشر نشده</p>
                    </div>
                }
            </div>

            <!-- تب ذخیره‌شده -->
            <div id="saved" class="tab-content hidden">
                @if (Model.Profile.SavedPosts is not null)
                {
                    <div class="grid grid-cols-3 gap-1 md:gap-4">
                        @foreach (var post in Model.Profile.SavedPosts)
                        {
                            <a href="/Post/@post.PostId" class="aspect-square relative group overflow-hidden rounded-lg">
                                <img src="/@post.ImgPostUrl" alt="ذخیره شده" class="w-full h-full object-cover transition-transform group-hover:scale-110 duration-300">
                                <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition flex items-center justify-center">
                                    <div class="text-white flex gap-6 text-lg font-bold">
                                        <span class="flex items-center gap-2">
                                            <i data-lucide="heart" class="w-6 h-6 fill-white"></i> @post.LikeCount
                                        </span>
                                        <span class="flex items-center gap-2">
                                            <i data-lucide="message-circle" class="w-6 h-6 fill-white"></i> @post.CommentCount
                                        </span>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-20">
                        <i data-lucide="bookmark" class="w-20 h-20 text-gray-300 mx-auto mb-4"></i>
                        <p class="text-xl font-medium text-gray-600">هیچ پستی ذخیره نشده</p>
                        <p class="text-sm text-gray-500 mt-2">وقتی پستی رو ذخیره کنی، اینجا نمایش داده میشه</p>
                    </div>
                }
            </div>

            <!-- تب تگ‌شده -->
            <div id="tagged" class="tab-content hidden">
                @if (Model.Profile.TagPosts is not null)
                {
                    <div class="grid grid-cols-3 gap-1 md:gap-4">
                        @foreach (var post in Model.Profile.TagPosts)
                        {
                            <a href="/Post/@post.PostId" class="aspect-square relative group overflow-hidden rounded-lg">
                                <img src="/@post.ImgPostUrl" alt="تگ شده" class="w-full h-full object-cover transition-transform group-hover:scale-110 duration-300">
                                <div class="absolute top-2 right-2 bg-white bg-opacity-90 px-2 py-1 rounded text-xs font-bold text-gray-800">
                                    تگ شدی
                                </div>
                                <div class="absolute inset-0 bg-black bg-opacity-40 opacity-0 group-hover:opacity-100 transition flex items-center justify-center">
                                    <div class="text-white flex gap-6 text-lg font-bold">
                                        <span class="flex items-center gap-2">
                                            <i data-lucide="heart" class="w-6 h-6 fill-white"></i> @post.LikeCount
                                        </span>
                                        <span class="flex items-center gap-2">
                                            <i data-lucide="message-circle" class="w-6 h-6 fill-white"></i> @post.CommentCount
                                        </span>
                                    </div>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-20">
                        <i data-lucide="tag" class="w-20 h-20 text-gray-300 mx-auto mb-4"></i>
                        <p class="text-xl font-medium text-gray-600">هنوز تگ نشدی</p>
                        <p class="text-sm text-gray-500 mt-2">وقتی کسی تو رو تگ کنه، اینجا نمایش داده میشه</p>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <div class="mt-6">
            <!-- تب پست‌ها -->
            <div id="posts" class="tab-content">
                <h1>برای دیدن پست ها ابتدا باید این کاربر را دنبال کنید</h1>
            </div>
        </div>
    }

</main>

@section Scripts {
    <script>
        function openTab(tabName) {
            // مخفی کردن همه تب‌ها
            document.querySelectorAll('.tab-content').forEach(tab => tab.classList.add('hidden'));
            document.querySelectorAll('.tab-btn').forEach(btn => {
                btn.classList.remove('border-indigo-600', 'text-indigo-600');
                btn.classList.add('text-gray-500');
            });

            // نمایش تب انتخاب شده
            document.getElementById(tabName).classList.remove('hidden');
            const activeBtn = document.getElementById(`tab-${tabName}`);
            activeBtn.classList.add('border-indigo-600', 'text-indigo-600');
            activeBtn.classList.remove('text-gray-500');
        }

        lucide.createIcons();
    </script>
}